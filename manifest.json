{
  "manifest_version" : 2,
  "name": "Inspire Me",
  "description": "A Google Chrome Extension for displaying your favorite quotes.",
  "version": "1.0",
  
  "browser_action": {
    "default_icon": "quotes.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
  
}
